#include <string.h>

char *smash (const char *const words[], size_t nb_words)
{
	size_t len=0;
	// Calculando espaço para a união das palavras   
  	for(size_t i=0; i<nb_words; i++){
	    len += strlen(words[i]);
	    len++; // para o espaço
	}
  
  	char* res = (char*)calloc(len,sizeof(char));
  	
 	for(size_t i=0;i<nb_words;i++){
		strcat(res,words[i]);
		strcat(res," "); 
 	}
 	strcpy(res+len-1,"\0");
 
  	return res;
}
