// busca um valor em um vetor de tamanho n
int busca(int v[], int n, int x){
  int index = -1;
  for(int i=0; i<n; i++)
     if(v[i] == x) index = i;
    
  return index;
}

// busca um valor me um vetor comeÃ§ando do fim
int busca(int v[], int n, int x){
  int k = n-1;
  while(k >=0 && v[k] != x) k--;
  
  return k;
}
